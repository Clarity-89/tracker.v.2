<div id="landing">
  <div id="landing-inner">
    <div id="landing-title">
      <div class="row">
        <%= form_for :session, url: login_path, html: {class: "col s12 m8 offset-m2", novalidate: 'true', autocomplete: "off"} do |f| %>
            <h4>Log In</h4>
            <div class="row">
              <div class="input-field col s12">
                <%= f.label :email %>
                <%= f.email_field :email, :autocomplete => :off %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.label :password %>
                <%= link_to "(forgot password)", new_password_reset_path %>
                <%= f.password_field :password, :autocomplete => :off %>
              </div>
            </div>
            <div class="row">
              <%= f.check_box :remember_me, id: "remember-me" %>
              <label for="remember-me">Remember me</label>
            </div>
            <div class="row">
              <%= f.submit "Log In", class: "btn waves-effect waves-light" %>
            </div>
            <p class="center">New user? <%= link_to "Sign up here.", signup_path %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Page-specific styles -->
<style>header, main, footer {
  padding-left: 0;
}</style>